{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if not is_granted('IS_AUTHENTICATED_FULLY')%}
    <h1>Witamy w elektronicznym systemie przychodni</h1>
   <form method="get" action="{{ path('app_login') }}">
       <div class="form-group field-button">
           <button type="submit" class="btn btn-primary btn-lg btn block">Logowanie</button>
       </div>
   </form>

    <form method="get" action="{{ path('app_register') }}">
        <div class="form-group field-button">
            <button type="submit" class="btn btn-dark">Rejestracja</button>
        </div>
    </form>
    {% endif %}
    {% if is_granted('ROLE_USER')%}
    <form method="get" action="{{ path('app_visit_addvisit') }}">
        <div class="form-group field-button">
            <button type="submit" class="btn btn-dark">Umów wizytę</button>
        </div>
    </form>
    <form method="get" action="{{ path('app_visit_listvisit') }}">
        <div class="form-group field-button">
            <button type="submit" class="btn btn-dark">Zobacz swoje wizyty</button>
        </div>
    </form>
    {% endif %}
</div>
{% endblock %}
